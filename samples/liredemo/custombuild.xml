    <description>
        This buildfile is used to package the LIRE Demo
    </description>

    <property name="src" value="src"/>
    <property name="build" value="classes"/>
    <property name="dist" value="dist"/>
    <property name="versionstring" value="1.0b2"/>

    <!-- define the classpath  -->
    <path id="classpath.path">
        <pathelement location="${build}"/>
        <fileset dir="lib">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="init">
        <tstamp/>
        <tstamp>
            <format property="touch.time" pattern="dd.MM.yyyy hh:mm aa"/>
        </tstamp>
        <mkdir dir="${build}"/>
    </target>

    <target name="compile" depends="clean, init">
        <javac srcdir="${src}" destdir="${build}">
            <classpath refid="classpath.path"/>
        </javac>

        <copy todir="${build}">
            <fileset dir="src">
                <patternset>
                    <include name="**/*.*"/>
                    <exclude name="**/CVS/*"/>
                    <exclude name="**/.svn/*"/>
                    <exclude name="**/*.java"/>
                </patternset>
            </fileset>
        </copy>

    </target>

    <target name="dist" depends="compile">
        <mkdir dir="${dist}"/>
        <mkdir dir="${dist}/lib"/>

        <echo file="default.mf" append="false">Main-Class: liredemo.LireDemoFrame
Class-Path: lib/commons-io-2.4.jar lib/commons-math3-3.2.jar lib/JOpenSurf.jar lib/lire.jar lib/lucene-analyzers-common-5.2.1.jar lib/lucene-core-5.2.1.jar lib/lucene-queryparser-5.2.1.jar lib/metadata-extractor-2.3.1.jar
        </echo>

        <copy todir="${dist}/lib">
            <fileset dir="lib">
                <patternset>
                    <include name="**/*.*"/>
                    <exclude name="**/CVS/*"/>
                    <exclude name="**/.svn/*"/>
                </patternset>
            </fileset>
        </copy>

        <jar jarfile="${dist}/liredemo.jar" basedir="${build}" manifest="default.mf"/>
    </target>

    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>

    <target name="release" depends="dist">
        <!-- Make a zip file -->
        <!--subant antfile="nbbuild.xml" target="LireDemo-impl.jar"/-->
        <zip destfile="${dist}/LireDemo-src-${versionstring}.zip">
            <fileset dir="${src}">
                <patternset>
                    <!--include hashFunctionsFileName="${src}"/-->
                    <exclude name="**/.svn"/>
                </patternset>
            </fileset>
        </zip>
    </target>

</project>